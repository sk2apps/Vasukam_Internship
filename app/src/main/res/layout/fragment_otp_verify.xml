<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragments.OtpVerifyFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pexels_brenoanp"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_stroke_transparent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter OTP"
            android:textColor="@color/white"
            android:layout_marginTop="235dp"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OTP"
            android:paddingStart="2dp"
            android:letterSpacing="0.02"
            android:layout_marginTop="360dp"
            android:id="@+id/otp"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="@string/resend"
            android:id="@+id/resend"
            android:layout_below="@id/otp"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="526dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/white_round_login"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@id/done"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="17sp"
            android:letterSpacing="0.02"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/rounded_semi_transparent"
            android:id="@+id/errorText"
            android:textColor="@color/white" />


    </RelativeLayout>
</layout>