<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EDECEC">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_layout"
        android:background="@color/white">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/back_arrow_figma"
            app:tint="#222222"
            android:id="@+id/backButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_picture"
            android:src="#222222"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_picture"
            android:textColor="#222222"
            android:textSize="15sp"
            android:id="@+id/username"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_warningcircle_figma"
            app:tint="#222222"
            android:id="@+id/info_button"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_mic_none_24"
            app:tint="#222222"
            android:layout_toStartOf="@id/info_button"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/mic_button"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/videocamera_figma"
            app:tint="#222222"
            android:id="@+id/video_call"
            android:layout_toStartOf="@id/mic_button"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_below="@id/first_layout"
        android:layout_alignParentEnd="true"
        android:id="@+id/message_cardS"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2D9848">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/send_message"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_below="@id/first_layout"
        android:id="@+id/message_cardR"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2D9848">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/receive_message"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_layout"
        android:layout_above="@id/bottom_layout"
        android:id="@+id/chat_list_messages"
        android:background="#EDECEC"
        tools:listitem="@layout/chat_list_messenges_item"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout"
        android:background="@color/white">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/camera_figma"
            app:tint="#222222"
            android:id="@+id/camera_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_photo_24"
            app:tint="#222222"
            android:id="@+id/image_button"
            android:layout_toEndOf="@id/camera_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@color/transparent"
            android:src="@drawable/plus_figma"
            app:tint="#222222"
            android:id="@+id/add_button"
            android:layout_toEndOf="@id/image_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/chat_textbox_rounded_grey"
            android:layout_toEndOf="@+id/add_button">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_mic_none_24"
                app:tint="#222222"
                android:id="@+id/mic_chat_button"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Message"
                android:id="@+id/messageBox"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:background="@drawable/button_background_rectangular"
                android:layout_toStartOf="@id/mic_chat_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        android:layout_centerInParent="true"
        android:background="#32FFFFFF"
        android:id="@+id/request_dialog"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="Accept"
                android:id="@+id/accept_request"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/black"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="Cancel"
                android:layout_margin="10dp"
                android:id="@+id/cancel_dialog"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/black"
                android:textAllCaps="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:text="Continue to chat?"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>